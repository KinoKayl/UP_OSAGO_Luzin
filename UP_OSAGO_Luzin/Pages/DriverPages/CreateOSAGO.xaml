<Page x:Class="UP_OSAGO_Luzin.Pages.DriverPages.CreateOSAGO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP_OSAGO_Luzin.Pages.DriverPages"
      mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800"
Title="RegPage">

    <Grid Background="#9dcde7">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="83*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="AuthForm" VerticalAlignment="Top" HorizontalAlignment="Center" Width="780" Margin="0,39,0,0" Grid.RowSpan="4">
            <Label Content="Регистрация полиса ОСАГО" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 30" FontSize="28" FontWeight="Bold" FontFamily="Comic Sans MS"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="233"/>
                    <ColumnDefinition Width="250*"/>
                    <ColumnDefinition Width="297*"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Номер удостоверения" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" FontSize="18" Margin="0 10 0 0" FontFamily="Comic Sans MS" Width="223"/>
                <TextBox x:Name="UdoNumberBox" Grid.Row="1" Text="" Foreground="Black" Grid.Column="1" ToolTip="Введите логин или почту!" FontSize="16" VerticalContentAlignment="Center" TextChanged="UdoNumberBox_TextChanged" MaxLength="10" FontFamily="Comic Sans MS" Margin="15,5,15,5"/>
                <TextBlock x:Name="UdoNumberBoxText" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Gray" FontSize="16" Margin="20,0,0,0" MouseDown="UdoNumberBoxText_MouseDown" FontFamily="Comic Sans MS" Height="23" Width="200"><Run Language="ru-ru" Text="Номер удостоверения"/></TextBlock>



                <Label Content="Свидетельство о&#xD;&#xA;регистрации ТС" Grid.Row="2" HorizontalAlignment="Center" FontSize="18" Margin="0,4,0,6" FontFamily="Comic Sans MS" Width="223"/>
                <TextBox x:Name="RegNumberBox" Grid.Row="2" Text="" Foreground="Black" Grid.Column="1" ToolTip="Введите логин или почту!" FontSize="16" VerticalContentAlignment="Center" TextChanged="RegNumberBox_TextChanged" MaxLength="50" FontFamily="Comic Sans MS" Margin="15,17,15,18"/>
                <TextBlock x:Name="RegNumberBoxText" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Gray" FontSize="16" Margin="20,0,0,0" MouseDown="RegNumberBoxText_MouseDown" FontFamily="Comic Sans MS" Height="23" Width="192"><Run Text="Номер "/><Run Language="ru-ru" Text="свидетельства"/></TextBlock>

                <Label Content="Введите ФИО" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Left" FontSize="18" Margin="0 10 0 0" FontFamily="Comic Sans MS" Width="223"/>
                <TextBox x:Name="FIOBox" Grid.Row="4" Text="" Foreground="Black" Grid.Column="1" ToolTip="Введите логин или почту!" FontSize="16" VerticalContentAlignment="Center" TextChanged="FIOBox_TextChanged" MaxLength="50" FontFamily="Comic Sans MS" Margin="15,5,15,4"/>
                <TextBlock x:Name="FIOBoxText" Text="ФИО" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="Gray" FontSize="16" Margin="20,0,0,0" MouseDown="FIOBoxText_MouseDown" Height="22" Width="193" FontFamily="Comic Sans MS"/>

                <Label Content="Страховая компания" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" FontSize="18" Margin="0,10,0,10" FontFamily="Comic Sans MS" Width="223"/>
                <ComboBox x:Name="OrgComboBox" Grid.Row="5" Grid.Column="1" Width="220" Height="35" FontSize="16" ToolTip="Выберите роль!" FontFamily="Comic Sans MS">
                    <ComboBoxItem Content="Росгосстрах" IsSelected="True" Tag="1"/>
                    <ComboBoxItem Content="АльфаСтрахование" Tag="2"/>
                    <ComboBoxItem Content="Ингосстрах" Tag="3"/>
                    <ComboBoxItem Content="Согласие" Tag="4"/>
                </ComboBox>
                <Button x:Name="BtnCancel" Content="Отмена" Grid.Row="6" Grid.Column="0" Style="{StaticResource ButtonAuthRegForms}" Width="100" Height="34" FontSize="16" HorizontalAlignment="Left" Click="BtnCancel_Click" ToolTip="Нажав на кнопку, вы вернётесь на форму авторизации." VerticalAlignment="Center"/>
                <Button Content="Зарегистрировать" x:Name="RegButton" Grid.Row="6" Grid.Column="2" Style="{StaticResource ButtonAuthRegForms}" Width="220" FontSize="16" HorizontalAlignment="Center" ToolTip="Нажав на кнопку, вы будете зарегистрированы в систему." Click="RegButton_Click" Margin="0,6,0,0"/>
                <Label Content="Государственный Номер ТС" Grid.Row="0" HorizontalAlignment="Left" FontSize="18" FontFamily="Comic Sans MS" Width="266" Grid.Column="2" Margin="21,-1,0,1"/>
                <TextBox x:Name="TCNumberBox" Grid.Row="1" Text="" Foreground="Black" Grid.Column="2" ToolTip="Введите логин или почту!" FontSize="16" VerticalContentAlignment="Center" MaxLength="10" FontFamily="Comic Sans MS" Margin="39,4,38,6"/>


            </Grid>
        </StackPanel>
    </Grid>
</Page>
